/* banners */
.banner {
  display: flex;
  width: 30rem;
  height: 20rem;
}

.banner img {
  padding: 0;
  width: 0px;
  flex-grow: 1;
  object-fit: cover;
  opacity: 8;
  transition: 1.5s ease;
}

.banner img:hover {
  cursor: crosshair;
  width: 20rem;
  opacity: 1;
  filter: contrast(120%);
}

.docs, .projects {
  box-shadow: 0 0 0 0;
}

.aboutMe, .main, .services article{
  box-shadow: 0 0 0 0;
  /*border-bottom: solid .1rem;*/
}


/* onload animation and pop animations */
article {
  animation: .8s ease-out 0s 1 welcome;
  transition:.3s
}

article:hover {
  scale: 1.13;
}

@keyframes welcome {
  0% {
    scale: 2.5;
    opactiy: 0;
  }

  33% {
    scale: 2.0;
    opacity: 0.3;
  }

  66% {
    scale: 1.5;
    opacity: 0.6;
  }

  100% {
    scale: 1;
    opacity: 1;
  }
}

/* scroll effect*/

section {
  view-timeline: --scroll
}

section article:fist-child {
  animation: fade-away both linear;
  animation-timeline: --scroll;
  animation-range: exit 20% exit 90%;
}

section article:last-child {
  animation:
    scale-up both ease-in-out,
    fade-away both linear;
  animation-timeline: --scroll;
  animation-range:
    exit 0% exit 100%,
    exit 50% exit 90%;
}

@keyframes scale-up {
  to { scale: 1.5; }
}

@keyfreames fade-away {
  to { opacity: 0; }
}


