/*a hype version of the normal css version*/

*  {
  margin: 0;
  padding : .6rem;
  font-family: 'Courier New', cursive;
  /* border: solid 1px skyblue; */
  border-radius: 5px;
  color: #cdcdcd;
}

html{
  padding: 0;
}

body {
  display: grid;
  min-height: 100vh;
  overflow-x: hidden;
  background: #111;
  grid-template-rows: auto 1fr auto;
}

header, footer {
  height: 100dvh;
  padding: .5rem;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

header h1 {
  scale: 2;
}

header nav {
  display: none;
}

header{
  border-bottom: solid 1px;
}

footer{
  border-top: solid 1px;
  flex-direction: column;
}

main {
  height: fit-content;
  margin: 1rem;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  gap: 1rem;
}


section {
  width: 80%;
  height: 100dvh;
  margin: 5rem auto;
  /* box-shadow: 0px 0px 16px 0.5px; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items: flex-end;
  gap: 2rem;
  /*flex: 1;*/
}

article{ 
  box-shadow: 0px 0px 12px 0.5px;
}

section *{
  /* box-shadow: 0px 0px 16px 0.5px; */
  min-height: 95%;
  min-width: auto;
  flex: 1;
  flex-grow: 1;
}

input{
  color: black;
}

